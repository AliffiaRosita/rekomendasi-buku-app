<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.UserFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="800dp">


   <LinearLayout
       android:id="@+id/linearLayout"
       android:layout_width="match_parent"
       android:layout_height="250dp"
       android:gravity="center"
       android:background="@color/colorOrange"
       android:orientation="vertical"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent">

      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/user_image_thumb"
          android:layout_width="75dp"
          android:layout_height="74dp"
          android:src="@drawable/bg_detail"
          app:civ_border_color="@android:color/white"
          app:civ_border_width="2dp" />

      <TextView
          android:id="@+id/nama_user"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:fontFamily="@font/montserrat_bold"
          android:text="Aliffia Rosita"
          android:textAlignment="center"
          android:textColor="@android:color/white"
          android:textSize="16sp" />

      <TextView
          android:id="@+id/nim_user"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/montserrat_regular"
          android:text="1615015169"
          android:textAlignment="center"
          android:textColor="@android:color/white"
          android:textSize="12sp" />

      <TextView
          android:id="@+id/fakultas_user"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:fontFamily="@font/montserrat_bold"
          android:text="Fakultas Teknik"
          android:textAlignment="center"
          android:textColor="@android:color/white" />

   </LinearLayout>

   <ImageView
       android:id="@+id/imageView8"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="@drawable/ic_wave"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/imageView8" >

      <Button
          android:id="@+id/btn_change_pass"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:background="@drawable/button_bottom_line"
          android:drawableLeft="@drawable/ic_baseline_lock_24"
          android:drawablePadding="12dp"
          android:fontFamily="@font/montserrat_bold"
          android:padding="12dp"
          android:text="Ubah Password"
          android:textAlignment="viewStart"
          android:textSize="12sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/btn_change_profile" />

      <Button
          android:id="@+id/btn_change_profile"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:background="@drawable/button_bottom_line"
          android:drawableLeft="@drawable/ic_baseline_edit_24"
          android:drawablePadding="12dp"
          android:fontFamily="@font/montserrat_bold"
          android:padding="12dp"
          android:text="Ubah Profil"
          android:textAlignment="viewStart"
          android:textSize="12sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <Button
          android:id="@+id/btn_logout"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:background="@drawable/button_bottom_line"
          android:drawableLeft="@drawable/ic_baseline_exit_to_app_24"
          android:drawablePadding="12dp"
          android:fontFamily="@font/montserrat_bold"
          android:padding="12dp"
          android:text="Keluar"
          android:textAlignment="viewStart"
          android:textSize="12sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/btn_change_pass" />
   </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>